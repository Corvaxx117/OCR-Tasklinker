<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1"/>
		<title>
			{% block title %}TaskLinker
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&display=swap"/>
		<link rel="stylesheet" href="{{ asset('css/style.css') }}"/> {% block styles %}{% endblock %}
		</head>
		<body>
			<div id="main-container">
				<nav>
					<a href="{{ path('project_list') }}" id="logo">
						<img src="{{ asset('assets/img/logo.png') }}" alt="Logo TaskLinker"/>
					</a>
					<ul id="main-menu">
						<li class="{% if app.request.attributes.get('_route') starts with 'project_' or app.request.attributes.get('_route') == 'homepage' %}active{% endif %}">
							<a href="{{ path('project_list') }}">
								<i class="fa-solid fa-list-check"></i>
								Projets</a>
						</li>
						<li class="{% if app.request.attributes.get('_route') starts with 'team_' or app.request.attributes.get('_route') starts with 'employee_' %}active{% endif %}">
							<a href="{{ path('team_list') }}">
								<i class="fa-solid fa-users"></i>
								Ã‰quipe</a>
						</li>
					</ul>
				</nav>
				<main>
					<header>
						<div id="current-user"></div>
						<div id="title-page">
							<h1>
								{% block page_title %}{% endblock %}
							</h1>
						</div>
					</header>
					<div id="content">
						{% for label, messages in app.flashes %}
							<div class="flash flash-{{ label }}">
								{% for message in messages %}
									<p>{{ message }}</p>
								{% endfor %}
							</div>
						{% endfor %}
						{% block body %}{% endblock %}
					</div>
				</main>
			</div>
			{% block scripts %}{% endblock %}
			<script type="module" src="{{ asset('js/app.js') }}"></script>
		</body>
	</html>

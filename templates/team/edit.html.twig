{% extends 'base.html.twig' %}
{% block title %}Modifier employé - TaskLinker
{% endblock %}
{% block page_title %}Modifier employé
{% endblock %}
{% block body %}
	<form name="employe" method="post">
		{{ form_start(form) }}
		<div class="field-inline">
			<div class="field">{{ form_row(form.firstName) }}</div>
			<div class="field">{{ form_row(form.lastName) }}</div>
		</div>
		<div class="field">{{ form_row(form.mail) }}</div>
		<div class="field-inline">
			<div class="field">{{ form_row(form.accessStatus) }}</div>
			<div class="field">{{ form_row(form.contractType) }}</div>
		</div>
		<div class="field">{{ form_row(form.startedAt) }}</div>
		<button class="button button-submit">Enregistrer</button>
		{{ form_end(form) }}
	</form>
{% endblock %}
